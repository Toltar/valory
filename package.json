{
	"name": "valory",
	"version": "3.5.1",
	"description": "A server agnostic web framework for creating bulletproof apis",
	"scripts": {
		"buildTest": "tsc && npm run build",
		"build": "npm run compiler && npm run runtime",
		"compiler": "tsc -p tsconfig-compiler.json",
		"release": "semantic-release",
		"runtime": "tsc -p tsconfig-runtime.json && cp package-min.json runtime/package.json",
		"lint": "tslint --project .",
		"clean": "rm -r dist compiler runtime || true",
		"docgen": "typedoc --module commonjs --target ES6 --includes DOCS.md --excludeExternals --excludePrivate --out docs --excludeNotExported --ignoreCompilerErrors --mode file  src/server/"
	},
	"engines": {
		"node": ">=12"
	},
	"author": "John Conley",
	"license": "ISC",
	"files": [
		"package.json",
		"README.md",
		"compiler",
		"templates",
		"tsconfig.json",
		"tslint.json",
		"tsfmt.json"
	],
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-conventional": "^8.3.4",
		"@types/handlebars": "^4.1.0",
		"@types/json-schema": "^7.0.4",
		"@types/lodash": "^4.14.149",
		"@types/node": "^13.9.2",
		"@types/pino": "^5.17.0",
		"@types/semver": "^7.1.0",
		"@types/yargs": "^15.0.4",
		"cz-conventional-changelog": "^3.1.0",
		"husky": "^4.2.3",
		"semantic-release": "^17.0.4",
		"tslint": "^6.1.0",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"@openapi-contrib/openapi-schema-to-json-schema": "^3.0.0",
		"@types/tmp": "^0.1.0",
		"ajv": "^6.12.0",
		"chalk": "^3.0.0",
		"google-closure-compiler": "^20200224.0.0",
		"json-schema-merge-allof": "^0.7.0",
		"json-schema-ref-parser": "^8.0.0",
		"lodash": "^4.17.15",
		"map-keys-deep-lodash": "^1.2.2",
		"openapi-types": "^1.3.5",
		"pino": "^5.17.0",
		"polka": "^0.5.2",
		"semver": "^7.1.3",
		"swagger-parser": "^9.0.1",
		"thread-spin": "^1.3.0",
		"tmp": "^0.1.0",
		"ts-node": "^8.7.0",
		"tsoa": "v3",
		"uuid-random": "^1.3.0",
		"yargs": "^15.3.1"
	},
	"preferGlobal": true,
	"bin": {
		"valory": "compiler/cli/cli.js"
	},
	"repository": "https://github.com/valoryteam/valory.git",
	"release": {
		"repositoryUrl": "https://github.com/valoryteam/valory.git",
		"branches": [
			"master",
			{
				"name": "v4",
				"prerelease": true
			}
		],
		"verifyConditions": [
			{
				"path": "@semantic-release/github"
			},
			{
				"path": "@semantic-release/npm"
			},
			{
				"path": "@semantic-release/npm",
				"pkgRoot": "runtime"
			}
		],
		"publish": [
			{
				"path": "@semantic-release/npm"
			},
			{
				"path": "@semantic-release/github"
			},
			{
				"path": "@semantic-release/npm",
				"pkgRoot": "runtime"
			}
		],
		"prepare": [
			{
				"path": "@semantic-release/npm"
			},
			{
				"path": "@semantic-release/npm",
				"pkgRoot": "runtime"
			}
		],
		"success": [],
		"fail": []
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org"
	},
	"keywords": [
		"rest",
		"framework",
		"validation",
		"decorators"
	],
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
		}
	}
}
